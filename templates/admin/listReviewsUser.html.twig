{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}

<div class="container text-center">

    <h1 class="mb-4">Liste des avis du <span class="text-info">{{ user.nickname }}</span></h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Produit</th>
            <th>Avis</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td class="py-1">{{ review.date | date('d-m-Y h-m-s') }}</td>
                <td class="py-1">{{ review.product.title }}</td>
                <td class="py-1">{{ review.content }}</td>
                <td class="py-1">
                    {# <a href="" class="mx-2"><i class="fas fa-2x fa-edit text-info"></i></a> #}
                    <a href="{{ path('deleteReviewAdmin', {'id': review.id }) }}" class="mx-2" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Supprimer l'avis"><i class="fas fs-4 fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}

