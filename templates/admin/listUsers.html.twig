{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="py-1">{{ user.id }}</td>
                <td class="py-1">{{ user.nickname }}</td>
                <td class="py-1">{{ user.email }}</td>
                <td class="py-1">{{ user.roles[0] }}</td>
                <td class="py-1">
                    <a href="{{ path('editUser', {'id': user.id }) }}" class="mx-3"><i class="fas fa-2x fa-edit text-info"></i></a>
                    <a href="{{ path('deleteUser', {'id': user.id }) }}" class="mx-3"><i class="fas fa-2x fa-trash text-danger"></i></a>
                    {% if user.roles[0] == 'ROLE_USER' %}
                    <a href="{{ path('makeAdmin', {'id': user.id }) }}" class="mx-3"><i class="fas fa-2x fa-lock text-warning"></i></a>
                    {% else %}
                    <a href="{{ path('makeUser', {'id': user.id }) }}" class="mx-3"><i class="fas fa-2x fa-lock-open text-success"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

