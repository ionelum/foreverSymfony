{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Liste des avis</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Pseudo</th>
            <th>Produit</th>
            <th>Avis</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td class="py-1">{{ review.date | date('d-m-Y h-m-s') }}</td>
                <td class="py-1">{{ review.user.nickname }}</td>
                <td class="py-1">{{ review.product.title }}</td>
                <td class="py-1">{{ review.content }}</td>
                <td class="py-1">
                    <a href="" class="mx-2"><i class="fas fa-2x fa-edit text-info"></i></a>
                    <a href="" class="mx-2"><i class="fas fa-2x fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

