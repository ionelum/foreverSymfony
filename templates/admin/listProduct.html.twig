{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th class="px-0">Nom</th>
            <th class="px-0">Categorie</th>
            <th class="px-0">Reference</th>
            <th class="px-0">Prix</th>
            <th class="px-0">Description</th>
            <th class="px-0">Contenance</th>
            <th class="px-0">Utilisation</th>
            <th class="px-0">Photo</th>
            <th class="px-0">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="p-0">{{ product.title|slice(0, 35) }}</td>
                <td class="p-0">{{ product.category.title|slice(0, 30) }}</td>
                <td class="p-0">{{ product.ref }}</td>
                <td class="p-0">{{ product.price|number_format(2) }} â‚¬</td>
                <td class="p-0">{{ product.description|slice(0, 40) }}</td>
                <td class="p-0">{{ product.volume|slice(0, 10) }}</td>
                <td class="p-0">{{ product.mode|slice(0, 20) }}</td>
                <td class="p-0"><img src="{{ asset('upload/' ~ product.picture) }}" width="50" alt=""></td>
                <td class="p-0">
                    <a href="{{ path('editProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-edit text-info"></i></a>
                    <a href="{{ path('deleteProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

