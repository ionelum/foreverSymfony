{% extends 'backoffice.html.twig' %}

{% block body %}
<h1>Liste des images pour carousel</h1>
    

    <table class="table table-dark table-striped mt-5">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>

        {% for carousel in carousels %}

        <tr>
            <td>{{ carousel.title }}</td>
            <td><img src="{{ asset('upload/' ~ carousel.picture) }}" width="300" alt=""></td>
            <td>
                <a href="{{ path('deleteCarousel', {'id': carousel.id }) }}" class="mx-2"><i class="fas fa-2x fa-trash text-danger"></i></a>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>




{% endblock %}

{% block title %}

{% endblock %}

