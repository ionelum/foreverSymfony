{% extends 'backoffice.html.twig' %}

{% block body %}

<div class="container text-center">

<h1 class="mb-4">Liste des images pour carousel</h1>
    
    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>

        {% for carousel in carousels %}

        <tr>
            <td>{{ carousel.title }}</td>
            <td><img src="{{ asset('upload/' ~ carousel.picture) }}" width="300" alt=""></td>
            <td>
                <a href="{{ path('deleteCarousel', {'id': carousel.id }) }}" class="mx-2" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Supprimer l'image"><i class="fas fa-2x fa-trash text-danger"></i></a>
            </td>
        </tr>
        {% endfor %}

        </tbody>
    </table>

</div>




{% endblock %}

{% block title %}

{% endblock %}

