<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}DressInBackoffice | {% endblock %}</title>
    {% block stylesheets %}

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.3/slate/bootstrap.min.css" integrity="sha512-GixPbJydZH3yyD23SgcC/i/FIhLb+0F26ABBvEg9ejj90hYuXXjPphWTWTX5dIuolObna6iXz1nr5nog6Dex7w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    {% endblock %}

</head>
<body >
<div   class="row justify-content-center">
    <div class="col-md-2 bg-white ">
        <ul class="nav flex-column">
            <li class="nav-item ms-5 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="{{ path('accueil') }}" class="btn btn-primary active"><i class="fas fa-user fa-2x"></i></a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            {# <a class="dropdown-item" href="#">Profil</a> #}
                            <a class="dropdown-item" href="{{ path('accueil') }}">Accès Front</a>
                            <hr>
                            <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary  active">Gestion des articles</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop2" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop2" style="">
                            <a class="dropdown-item" href="{{ path('listProduct') }}">Liste des articles</a>
                            <a class="dropdown-item" href="{{ path('addProduct') }}">Ajout article</a>
                        </div>
                    </div>
                </div>
            </li>

            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary  active">Gestion des catégories</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop3" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop3" style="">
                            <a class="dropdown-item" href="{{ path('listCategory') }}">Liste catégories</a>
                            <a class="dropdown-item" href="{{ path('addCategory') }}">Ajout catégories</a>
                        </div>
                    </div>
                </div>
            </li>

            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary  active">Gestion caroussel</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop4" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop4" style="">
                            <a class="dropdown-item" href="{{ path('listCarousel') }}">Liste images carousel</a>
                            <a class="dropdown-item" href="{{ path('addCarousel') }}">Ajout images carousel</a>
                        </div>
                    </div>
                </div>
            </li>

            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary  active">Gestion utilisateurs</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('listUsers') }}">Liste des utilisateurs</a>

                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary  active">Gestion avis</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('listReviews') }}">Liste des avis</a>
                        </div>
                    </div>
                </div>
            </li>
            

        </ul>
    </div>
    <div class="col-md-9 bg-white table-responsive ">

        <div class="row justify-content-center mt-4 mb-4">
            <div class="col text-center"><h1>{% block titre %}{% endblock %}</h1></div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center mx-auto col-6">
                {{ message }}
            </div>

        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger text-center mx-auto col-6">
                {{ message }}
            </div>

        {% endfor %}

        {% block body %}

        {% endblock %}
    </div>
</div>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
