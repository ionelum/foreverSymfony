{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Reference</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Contenance</th>
            <th>Utilisation</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.title|slice(0, 10) }}</td>
                <td>{{ product.ref }}</td>
                <td>{{ product.price }} â‚¬</td>
                <td>{{ product.description|slice(0, 10) }}</td>
                <td>{{ product.volume|slice(0, 10) }}</td>
                <td>{{ product.mode|slice(0, 10) }}</td>
                <td><img src="{{ asset('upload/' ~ product.picture) }}" width="50" alt=""></td>
                <td>
                    <a href="{{ path('editProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-edit "></i></a>
                    <a href="{{ path('deleteProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

