{% extends 'backoffice.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Categorie</th>
            <th>Reference</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Contenance</th>
            <th>Utilisation</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="py-0">{{ product.title|slice(0, 35) }}</td>
                <td class="py-0">{{ product.category.title|slice(0, 30) }}</td>
                <td class="py-0">{{ product.ref }}</td>
                <td class="py-0">{{ product.price|number_format(2) }} â‚¬</td>
                <td class="py-0">{{ product.description|slice(0, 40) }}</td>
                <td class="py-0">{{ product.volume|slice(0, 10) }}</td>
                <td class="py-0">{{ product.mode|slice(0, 20) }}</td>
                <td class="py-0"><img src="{{ asset('upload/' ~ product.picture) }}" width="50" alt=""></td>
                <td class="py-0">
                    <a href="{{ path('editProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-edit text-info"></i></a>
                    <a href="{{ path('deleteProduct', {'id': product.id }) }}" class="mx-2"><i class="fas fa-2x fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

